<h2 class="text-2xl font-bold mb-6 text-center">確認メールの再送信</h2>

<div class="card w-full max-w-sm shadow-lg bg-base-100 mx-auto">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-control mt-4">
        <label class="label" >
          <span class="label-text">登録したメールアドレス</span>
        </label>
        <%= f.email_field :email, id: "email_field", class: "input input-bordered w-full", autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      </div>

      <div class="form-control mt-4">
        <%= f.submit "確認メールを再送信", class: "btn w-64 py-2 text-lg border-2 border-pink-500 bg-transparent text-gray-600 hover:bg-pink-100 w-full" %>
      </div>
    <% end %>

    <div class="space-y-4 text-center">
      <% if controller_name != 'sessions' %>
        <%= link_to "ログイン", new_session_path(resource_name), class: "btn w-64 py-2 text-lg border-2 border-blue-500 bg-transparent text-gray-600 hover:bg-blue-100 w-full" %>
      <% end %>

      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "新規登録", new_registration_path(resource_name), class: "btn w-64 py-2 text-lg border-2 border-lime-500 bg-transparent text-gray-600 hover:bg-lime-100 w-full" %>
      <% end %>

      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name), class: "btn w-64 py-2 text-lg border-2 border-yellow-500 bg-transparent text-gray-600 hover:bg-yellow-100 w-full
        " %>
      <% end %>
    </div>
  </div>
</div>
