<h2 class="text-2xl font-bold text-center mb-6">パスワードを変更</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-control">
    <label class="label">
      <span class="label-text">新しいパスワード</span>
    </label>
    <% if @minimum_password_length %>
      <p class="text-sm text-gray-500 mb-2">
        (最低 <%= @minimum_password_length %> 文字)
      </p>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-bordered" %>
  </div>

  <div class="form-control">
    <label class="label">
      <span class="label-text">新しいパスワード（確認）</span>
    </label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered" %>
  </div>

  <div class="form-control mt-4">
    <%= f.submit "パスワードを変更", class: "btn btn-primary w-full" %>
  </div>
<% end %>

<div class="text-center mt-6">
  <%= render "devise/shared/links" %>
</div>
