<div class="space-y-4 text-center">
  <% if controller_name != 'sessions' %>
    <%= link_to "ログイン", new_session_path(resource_name), class: "btn w-64 py-2 text-lg border-2 border-blue-500 bg-transparent text-gray-600 hover:bg-blue-100 w-full" %>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規登録", new_registration_path(resource_name), class: "btn w-64 py-2 text-lg border-2 border-blue-500 bg-transparent text-gray-600 hover:bg-blue-100 w-full" %>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name), class: "btn w-64 py-2 text-lg border-2 border-lime-500 bg-transparent text-gray-600 hover:bg-lime-100 w-full" %>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "確認メールが届いていませんか？", new_confirmation_path(resource_name), class: "btn w-64 py-2 text-lg border-2 border-yellow-500 bg-transparent text-gray-600 hover:bg-yellow-100 w-full" %>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "アカウントロック解除のメールが届いていませんか？", new_unlock_path(resource_name), class: "btn btn-outline btn-error w-full" %>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "btn btn-outline btn-info w-full" %>
    <% end %>
  <% end %>
</div>
