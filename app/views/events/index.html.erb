<div class="container mx-auto py-4">
  <h1 class="text-2xl font-bold text-center mb-6">イベント結果一覧</h1>

  <!-- イベント結果一覧 -->
  <div class="overflow-x-auto">
    <table class="table w-full">
      <thead>
        <tr>
          <th>日付</th>
          <th>大会名</th>
          <th>会場名</th>
          <th>タイム</th>
          <th>ユーザー名</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <!-- 日付 -->
            <td><%= event.date.strftime("%Y/%m/%d") %></td>
            
            <!-- 大会名 -->
            <td><%= event.event_name %></td>
            
            <!-- 会場名 -->
            <td><%= event.venue %></td>
            
            <!-- タイム -->
            <td>
              <% if event.race_times.present? %>
                <% event.race_times.each do |race_time| %>
                  <div><%= number_to_human(race_time.rap_time, precision: 2) %>秒</div>
                <% end %>
              <% else %>
                <span class="text-gray-500">未登録</span>
              <% end %>
            </td>

            <!-- ユーザー名 -->
            <td><%= event.user.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
