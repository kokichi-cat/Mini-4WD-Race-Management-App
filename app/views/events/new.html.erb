<div class="container mx-auto max-w-4xl py-8">
  <div class="text-center">
    <h1 class="text-2xl font-bold mb-6">レース記録を入力</h1>
  </div>
  <div class="card shadow-lg bg-base-100 p-6">
    <%= form_with model: @event, class: "form-control gap-4" do |f| %>
      
      <!-- 日付 -->
      <div class="form-control">
        <%= f.label :date, "日付", class: "label font-bold" %>
        <%= f.date_field :date, class: "input input-bordered" %>
      </div>
      
      <!-- 大会名 -->
      <div class="form-control">
        <%= f.label :event_name, "大会名", class: "label font-bold" %>
        <%= f.text_field :event_name, class: "input input-bordered" %>
      </div>
      
      <!-- 会場名 -->
      <div class="form-control">
        <%= f.label :venue, "会場名", class: "label font-bold" %>
        <%= f.text_field :venue, class: "input input-bordered" %>
      </div>
      
      <!-- タイム1 -->
      <div class="form-control">
        <%= f.label :rap_time_1, "タイム1 (秒)", class: "label font-bold" %>
        <%= f.number_field :rap_time_1, class: "input input-bordered", step: "0.01", placeholder: "例: 12.34" %>
      </div>
      
      <!-- タイム2 -->
      <div class="form-control">
        <%= f.label :rap_time_2, "タイム2 (秒)", class: "label font-bold" %>
        <%= f.number_field :rap_time_2, class: "input input-bordered", step: "0.01", placeholder: "例: 15.67" %>
      </div>
      
      <!-- 送信ボタン -->
      <div class="form-control mt-4">
        <%= f.submit "送信", class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>
