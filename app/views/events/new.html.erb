<div class="container mx-auto max-w-4xl py-8">
  <div class="text-center">
    <h1 class="text-2xl font-bold mb-6">レース記録を入力</h1>
  </div>
  <div class="card shadow-lg bg-base-100 p-6">
    <%= form_with model: @event, class: "form-control gap-4" do |f| %>
      
      <!-- 日付 -->
      <div class="form-control">
        <%= f.label :date, "日付", class: "label font-bold" %>
        <%= f.date_field :date, class: "input input-bordered" %>
      </div>

      <!-- 天気 -->
      <div class="form-control">
        <%= f.label :weather, "天気", class: "label font-bold" %>
        <%= f.text_field :weather, class: "input input-bordered" %>
      </div>

      <!-- 気温 -->
      <div class="form-control">
        <%= f.label :temperature, "気温", class: "label font-bold" %>
        <%= f.text_field :temperature, class: "input input-bordered" %>
      </div>
      
      <!-- 大会名 -->
      <div class="form-control">
        <%= f.label :event_name, "大会名", class: "label font-bold" %>
        <%= f.text_field :event_name, class: "input input-bordered" %>
      </div>
      
      <!-- 会場名 -->
      <div class="form-control">
        <%= f.label :venue, "会場名", class: "label font-bold" %>
        <%= f.text_field :venue, class: "input input-bordered" %>
      </div>
      
      <!-- ネストされたフォーム -->
      <h3>ラップタイム</h3>
      <%= f.fields_for :race_times do |race_time_form| %>
        <div class="form-control">
          <%= race_time_form.label :rap_time, "タイム", class: "label font-bold" %>
          <%= race_time_form.text_field :rap_time, class: "input input-bordered" %>
        </div>
      <% end %>

      <!-- コメント -->
      <div class="form-control">
        <%= f.label :coment, "コメント", class: "label font-bold" %>
        <%= f.text_area :coment, class: "input input-bordered" %>
      </div>

      <!-- 送信ボタン -->
      <div class="form-control mt-4">
        <%= f.submit "送信", class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>
