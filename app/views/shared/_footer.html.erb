<footer class="bg-gray-500 text-white py-4 fixed bottom-0 left-0 right-0">
  <div class="container mx-auto flex justify-around items-center">

    <!-- イベント結果一覧リンク -->
    <%= link_to events_path, class: "flex flex-col items-center hover:text-gray-400" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mb-1">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 6.75h12M8.25 12h12m-12 5.25h12M3.75 6.75h.007v.008H3.75V6.75Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0ZM3.75 12h.007v.008H3.75V12Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm-.375 5.25h.007v.008H3.75v-.008Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
      </svg>
      <span>イベント一覧</span>
    <% end %>

    <!-- 記録するリンク -->
    <%= link_to new_event_path, class: "flex flex-col items-center hover:text-gray-400" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mb-1">
        <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
      </svg>
      <span>記録する</span>
    <% end %>

    <% if user_signed_in? %>
      <!-- ブックマーク（ログイン時のみ表示） -->
      <%= link_to bookmarks_path, class: "flex flex-col items-center hover:text-gray-400" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mb-1">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.593 3.322c1.1.128 1.907 1.077 1.907 2.185V21L12 17.25 4.5 21V5.507c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0 1 11.186 0Z" />
        </svg>
        <span class="hidden sm:block">ブックマーク</span>
      <% end %>

      <!-- マイページ（ログイン時のみ表示） -->
      <%= link_to mypage_path, class: "flex flex-col items-center hover:text-gray-400" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mb-1">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 7.5A3.75 3.75 0 1 1 12 3.75 3.75 3.75 0 0 1 15.75 7.5ZM12 12a8.25 8.25 0 0 1 8.25 8.25v.75H3.75v-.75A8.25 8.25 0 0 1 12 12Z" />
        </svg>
        <span class="hidden sm:block">マイページ</span>
      <% end %>
    <% end %>
  </div>
</footer>
