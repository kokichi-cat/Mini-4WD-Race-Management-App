<div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md text-center">
  <%= image_tag (@user.profile_picture.url.presence || "default_avatar.png"), class: "w-32 h-32 rounded-full mx-auto shadow-md" %>
  <h2 class="text-2xl font-bold mt-4"><%= @user.name %></h2>
  <p class="text-gray-600 mt-2"><%= @user.introduction.presence || "自己紹介はまだありません。" %></p>
  
  <% if current_user == @user %>
    <div class="mt-6"> <!-- 余白を追加 -->
      <%= link_to "プロフィールを編集", edit_user_path(@user), class: "btn bg-orange-500 text-white hover:bg-orange-300" %>
    </div>
  <% end %>

  <div class="container mx-auto py-4">
    <!-- 共通テンプレートの呼び出し -->
    <%= render 'events/event_list', events: @events, hide_user_name: true %>
    <%= paginate @events %>
  </div>
</div>
